{
  "compilerOptions": {
    "module": "commonjs",
    "composite": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "strict": true,
    "sourceMap": true,
    "incremental": true,
    "skipLibCheck": true
  }
}
